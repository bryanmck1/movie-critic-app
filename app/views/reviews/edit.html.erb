<div id="pageContainer" class="min-h-screen flex flex-col items-center">
  <%= render partial: 'devise/shared/navbar'%>
  <div class="mt-7 flex flex-col items-center w-11/12 ">
    <div class="md:hidden flex justify-between items-center w-full max-w-xl"> 
      <h1 class="font-semibold text-xl self-start max-w-xs"><%= @review.movie_title %></h1>     
    </div> 
    <div class="flex flex-col md:flex-row md:justify-start w-4/5 max-w-4xl">
      <img src="<%= @review.movie_poster %>" class="mt-7 md:mt-0 object-contain h-72 rounded-t-lg">
      <div id="movie-details" class="text-sm max-h-80 w-full mt-3 md:mt-0 md:flex md:flex-col md:justify-between md:ml-5">
        <h1 class="hidden md:inline font-semibold text-xl self-start max-w-xs"><%= @review.movie_title%></h1>     
        <div class="text-gray-500 w-full flex justify-between md:justify-start">
          <span class="md:mr-3"><%= @review.release_year%></span>
          <span class="md:mr-3">|</span>
          <span class="md:mr-3"><%= @review.runtime %></span>
          <span class="md:mr-3">|</span>
          <span class="md:mr-3"><%= @review.rating %></span>
          <span class="md:mr-3">|</span>
          <span class="md:mr-3"><%= @review.genre %></span>
        </div>
        <div class="flex flex-col mt-5 md:mt-0">
          <span class="font-bold">Director</span>
          <span><%= @review.director %></span>
        </div>
        <div class="flex flex-col mt-5 md:mt-0">
          <span class="font-bold">Lead Actors</span>
          <span><%= @review.actors %></span>
        </div>
        <div class="flex flex-col mt-5 md:mt-0">
          <span class="font-bold">Awards</span>
          <span><%= @review.awards %></span>
        </div>
        <div class="flex flex-col mt-5 md:mt-0">
          <span class="font-bold">Summary</span>
          <p class="pl-1 md:pl-0"><%= @review.plot_summary %></p>
        </div>
      </div>
    </div>
    <%= form_with(model: @review, url: review_path(@review), class:"w-4/5 max-w-4xl flex flex-col justify-center mt-7 mb-20") do |form| %>
      <%= form.label :review, class:"font-semibold" %> 
      <%= form.text_area :review, class: "rounded h-52", :required => true, value: @review.review_summary %>
      <%= form.label :score, class:"mt-3 font-semibold" %> 
      <%= form.number_field :score, class: "rounded w-16", :required => true, value: @review.review_score, min: 0, max: 10  %>
    
      <div class="flex w-full mt-5">
        <button class="w-24 mr-5 bg-green-500 hover:bg-white text-white hover:text-green-500 border-2 border-green-500 py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          <%= form.submit 'Update' %>
        </button>
        <button onclick="window.history.back();" class="w-24 bg-red-600 hover:bg-white text-white hover:text-red-600 border-2 border-red-600 py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          Cancel
        </button>
      </div>
    <% end %>
  </div>
</div>