<div class="mt-7 flex flex-col w-11/12 justify-center items-center top-14 md:top-20 relative">
  <div class="md:hidden flex justify-between items-center w-full max-w-xl"> 
    <h1 class="font-semibold text-xl self-start max-w-xs"><%= movie_title %></h1>     
  </div> 
  <div class="flex flex-col md:flex-row w-4/5 max-w-4xl">
    <img src="<%= poster %>" class="w-full md:w-auto mt-7 md:mt-0 h-72 md:h-80 object-contain rounded-t-lg">
    <div class="flex w-full md:hidden my-3">
      <span>Movie Details</span>
      <svg id="toggle-btn" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="rotate-180 w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3"/>
      </svg> 
    </div>
    <div id="movie-details" class="text-sm hidden flex justify-between flex-col md:flex md:justify-between md:ml-5">   
      <h1 class="hidden md:inline font-semibold text-xl self-start max-w-xs"><%= movie_title %></h1>     
      <div class="text-gray-500 w-full text-sm flex justify-between md:justify-start">
        <span class="md:mr-3"><%= year %></span>
        <span class="md:mr-3">|</span>
        <span class="md:mr-3"><%= runtime %></span>
        <span class="md:mr-3">|</span>
        <span class="md:mr-3"><%= rated %></span>
        <span class="md:mr-3">|</span>
        <span class="md:mr-3"><%= genre %></span>
      </div>
      <div class="flex flex-col justify-start mt-5 md:mt-0">
        <span class="font-bold text-sm">Director</span>
        <span><%= director %></span>
      </div>
      <div class="flex flex-col justify-start mt-5 md:mt-0">
        <span class="font-bold text-sm">Lead Actors</span>
        <span><%= actors %></span>
      </div>
      <div class="flex flex-col justify-start mt-5 md:mt-0">
        <span class="font-bold text-sm">Awards</span>
        <span><%= awards %></span>
      </div>
      <div class="flex flex-col justify-start mt-5 md:mt-0">
        <span class="font-bold text-sm">Summary</span>
        <span><%= plot_summary %></span>
      </div>
    </div>
  </div>
</div>