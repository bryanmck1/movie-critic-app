<div class="min-h-screen flex flex-col flex-start">
  <%= render partial: 'devise/shared/navbar'%>
  <% if session[:access_denied_message] %>
    <div class="alert alert-danger">
      <%= session[:access_denied_message] %>
    </div>
  <% session.delete(:access_denied_message) %>
  <% end %>
  <div class="flex flex-col justify-center items-center top-14 md:top-20 relative">
    <h3 class="text-md font-bold m-7">Account Information</h3>
    <div class="text-sm md:text-base w-5/6 max-w-xl"> 
      <div class="w-full flex justify-between my-7">
        <span class="font-semibold">Name</span>
        <span><%= current_user.first_name + " " + current_user.last_name %></span>
      </div>
      <div class="w-full flex justify-between my-7">
        <span class="font-semibold">Username</span>
        <span><%= current_user.username %></span>
      </div>
      <div class="w-full flex justify-between my-7">
        <span class="font-semibold">Email</span>
        <span><%= current_user.email %></span>
      </div>
    </div>
    <div class="flex flex-col md:flex-row mt-10 max-w-xl">
      <%= link_to 'Edit Profile', edit_user_registration_path, class: "mt-5 text-center bg:white border-2 border-blue-500 hover:bg-blue-500 hover:text-white text-blue-500 font-normal m-1 py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Password Reset', edit_user_registration_path, class: "mt-5 text-center bg:white border-2 border-blue-500 hover:bg-blue-500 hover:text-white text-blue-500 font-normal m-1 py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  </div>  
</div> 