<div id="pageContainer" class="min-h-screen flex flex-col items-center">
  <%= render partial: 'devise/shared/navbar'%>
  <div class="mt-10 flex flex-col w-4/5 justify-center items-center">
    <h3 class="font-bold text-lg w-4/5 text-center">What movie would you like to review?</h3>
    <%= form_with url: new_movie_path, class:"w-3/4 mt-3 flex justify-center max-w-3xl", method: :get do |form| %>
      <%= form.text_field :movie_query, class: "rounded w-full max-w-lg", placeholder: "Search for movie" %>
      <button class="hidden md:inline ml-3 bg-blue-600 hover:bg-blue-700 text-white font-normal py-2 px-4 rounded focus:outline-none focus:shadow-outline">
       <%= form.submit 'Search' %>
      </button>
    <% end %>
  </div>
  <div id="results" class="mt-12 w-11/12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-4">
    <% if @results.present? %>
      <% @results.each do |result| %>
        <div id="individualMovieContainer" class="flex flex-col items-center">
          <div class="h-full w-44 flex flex-col justify-between rounded-lg shadow-md">
            <% if result['Poster'] == 'N/A'%>
              <img src="https://i.ibb.co/xjPnHKf/360-F-400243185-BOx-ON3h9av-MUX10-Rs-Dkt3p-J8i-Qx72k-S3.jpg" alt="No image" class="w-full h-48 object-contain rounded-t-lg">
            <% else %>
              <img src="<%= result['Poster'] %>" alt="No poster available" class="w-full h-48 object-contain rounded-t-lg">
            <% end %>     
            <div class="p-4 flex flex-col items-center">
              <div class="font-semibold text-sm text-center mb-2">
                <%= result['Title'] %>
              </div>         
              <% if Review.exists?(imdb_id: result['imdbID']) %>
                <div class="flex text-xs w-full">
                  <%= link_to edit_review_path(Review.find_by(imdb_id: result['imdbID']).id), class: "mr-2 border-2 flex-1 rounded flex justify-center items-center border-green-600 hover:bg-green-600 hover:cursor-pointer hover:text-white" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                    </svg>
                    <span>Edit</span>
                  <% end %> 
                  <%= content_tag :div, 'Delete', data: { review_id: Review.find_by(imdb_id: result['imdbID']).id }, class: 'ml-2 review-delete border-2 border-black flex-1 flex items-center justify-center bg-red-600 hover:cursor-pointer text-center text-white border-red-600 hover:bg-red-600 hover:text-red-600 hover:bg-white rounded focus:outline-none focus:shadow-outline' do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                    </svg>
                    <span>Delete</span>
                  <% end %>
                 </div> 
                 <%= tag.div id: "modal-#{Review.find_by(imdb_id: result['imdbID']).id}", class: 'delete-modal hidden mt-14 top-0 left-0 fixed bg-opacity-75 bg-zinc-200 h-screen w-screen flex justify-center items-center', data: { review_id: Review.find_by(imdb_id: result['imdbID']).id } do %>
                   <div class="border-2 border-black bg-white w-3/4 max-w-xl h-auto flex flex-col justify-center items-center p-5">
                     <h4 class="font-bold text-center">Delete Review for <%= Review.find_by(imdb_id: result['imdbID']).movie_title %>?</h4>
                     <div class="mt-3">
                       <%= link_to 'Delete', review_path(Review.find_by(imdb_id: result['imdbID']).id), data: {turbo_method: :delete}, class:"w-20 mx-3 text-center text-xs text-red-600 border-2 border-red-600 hover:bg-red-600 hover:text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
                       <span onclick="document.getElementById('modal-<%= Review.find_by(imdb_id: result['imdbID']).id %>').classList.toggle('hidden');" class="cancel-modal w-20 mx-3 text-center hover:cursor-pointer text-xs text-red-600 border-2 border-red-600 hover:bg-red-600 hover:text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline">Cancel</span>
                     </div>
                   </div>
                <% end %>
              <% else %>
                <button class="text-sm hover:bg-blue-700 text-blue-700 border-2 border-blue-400 hover:text-white hover:border-white font-normal py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                  <%= link_to "Review", new_review_path(imdb_id: result['imdbID']) %>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>